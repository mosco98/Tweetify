{
  "manifest_version": 2,
  "name": "Tweetify",
  "description": "An extension that helps you Tweet from anywhere on your browser",
  "version": "1.0.0",
  "background": {
    "persistent": false,
    "scripts": [
     "/assets/js/firebase-app.js", "/assets/js/firebase-auth.js", "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "twitter2.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "storage",
    "https://twitter.com/",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "images/twitter.png"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "css": ["main.css"]
    }
  ],
  "content_security_policy":"script-src 'self' https://www.gstatic.com https://apis.google.com/ ; object-src 'self'"

}